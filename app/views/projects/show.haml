= render partial: 'nav'

#show-project.contentpane
  = link_to projects_path, id: 'return-link' do
    %i.fa.fa-angle-double-left
  %h1= best_in_place @project, :name
  .description= best_in_place @project, :description

  %h2 To Do
  .todos
    - @project.todos.each do |todo|
      .todo
        .description= todo.description
  #add-todo-link
    = link_to new_project_todo_path(@project) do
      %i.fa.fa-plus
      Add

  %h2 Links
  .links
    - @project.snippets.each do |snippet|
      .link
        .title= link_to snippet.title, url_with_protocol(snippet.url), target: '_blank'
        .excerpt= snippet.excerpt
        = link_to project_snippet_path(@project, snippet), name: 'delete-link', method: 'delete' do
          %i.fa.fa-close
  #add-link-link 
    = link_to new_project_snippet_path(@project) do
      %i.fa.fa-plus
      Add